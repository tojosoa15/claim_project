<style>
    @page {
        margin: 40px 60px;
    }

    body {
        font-family: Arial, sans-serif;
        font-size: 11px;
        color: #333;
    }

    h2 {
        font-size: 14px;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .section {
        margin-bottom: 30px;
    }

    .grid {
        display: table;
        width: 100%;
        border-spacing: 0;
        margin-top: 10px;
    }

    .grid-row {
        display: table-row;
    }

    .grid-cell {
        display: table-cell;
        width: 25%;
        padding: 6px 10px;
        vertical-align: top;
    }

    .label {
        font-size: 10px;
        color: #999;
        margin-bottom: 2px;
    }

    .value {
        font-weight: bold;
        font-size: 11px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
        font-size: 10px;
    }

    th, td {
        border: 1px solid #ccc;
        padding: 6px;
        text-align: right;
    }

    th {
        background-color: #f2f2f2;
        text-align: left;
    }

    .bold {
        font-weight: bold;
    }
</style>

<body>
    <h2>Claim No: {{ survey.claim_number }}</h2>

    <div class="section">
        <h2>General Information</h2>
        <div class="grid">
            <div class="grid-row">
                <div class="grid-cell">
                    <div class="label">Name</div>
                    <div class="value">{{ survey.name }}</div>
                </div>
                <div class="grid-cell">
                    <div class="label">Make</div>
                    <div class="value">{{ survey.make }}</div>
                </div>
                <div class="grid-cell">
                    <div class="label">Model</div>
                    <div class="value">{{ survey.model }}</div>
                </div>
                <div class="grid-cell">
                    <div class="label">Condition of vehicle</div>
                    <div class="value">{{ survey.condition_of_vehicle|capitalize }}</div>
                </div>
            </div>
            <div class="grid-row">
                <div class="grid-cell">
                    <div class="label">Chasis number</div>
                    <div class="value">{{ survey.chasisi_no }}</div>
                </div>
                <div class="grid-cell">
                    <div class="label">Point of impact</div>
                    <div class="value">{{ survey.point_of_impact }}</div>
                </div>
                <div class="grid-cell">
                    <div class="label">Place of survey</div>
                    <div class="value">{{ survey.place_of_survey }}</div>
                </div>
                <div class="grid-cell">
                    <div class="label">Is the vehicle total loss?</div>
                    <div class="value">{{ survey.is_the_vehicle_total_loss ? 'Yes' : 'No' }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="section">
        <h2>Survey Information</h2>
        <div class="grid">
            <div class="grid-row">
                <div class="grid-cell">
                    <div class="label">Invoice number</div>
                    <div class="value">{{ survey.invoice_number }}</div>
                </div>
                <div class="grid-cell">
                    <div class="label">Survey type</div>
                    <div class="value">{{ survey.survey_type }}</div>
                </div>
                <div class="grid-cell">
                    <div class="label">EOR value</div>
                    <div class="value">Rs {{ survey.eor_value|number_format(2, '.', ',') }}</div>
                </div>
                <div class="grid-cell">
                    <div class="label">Date & time of survey</div>
                    <div class="value">{{ survey.date_of_survey|date('d-M-Y') }} - {{ survey.time_of_survey|date('H:i') }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="section">
        <h2>Repair Estimate</h2>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Cost (MUR)</th>
                    <th>Discount (MUR)</th>
                    <th>VAT (MUR)</th>
                    <th>Total (MUR)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Parts</td>
                    <td>{{ survey.cost_part|number_format(2, '.', ',') }}</td>
                    <td>{{ survey.discount_part|number_format(2, '.', ',') }}</td>
                    <td>{{ survey.vat_part|number_format(2, '.', ',') }}</td>
                    <td>{{ survey.part_total|number_format(2, '.', ',') }}</td>
                </tr>
                <tr>
                    <td>Labour details</td>
                    <td>{{ survey.hourly_const_labour|number_format(2, '.', ',') }}</td>
                    <td>{{ survey.discount_labour|number_format(2, '.', ',') }}</td>
                    <td>{{ survey.vat_labour|number_format(2, '.', ',') }}</td>
                    <td>{{ survey.labour_total|number_format(2, '.', ',') }}</td>
                </tr>
                <tr class="bold">
                    <td>Grand Total</td>
                    <td>{{ survey.cost_total|number_format(2, '.', ',') }}</td>
                    <td>{{ survey.discount_total|number_format(2, '.', ',') }}</td>
                    <td>{{ survey.vat_total|number_format(2, '.', ',') }}</td>
                    <td>{{ survey.total|number_format(2, '.', ',') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>